<h1>Editing Book</h1>

<%= render "layouts/errors", obj: @book %>

<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :opinion %><br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<div>
  <%= link_to "Show", book_path(@book) %> |
  <%= link_to "Back", books_path %>
</div>